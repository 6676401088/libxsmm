#!/bin/bash

#
# This script is supposed to be source'd prior to building the library and samples using GNU GCC.
# Executing LIBXSMM_COVERAGE (after building/running a case) yields code coverage information.
#

if [[ "${CXX}" == "g++" ]]; then
  if [[ "${TRAVIS_BUILD_DIR}" == "" ]]; then
    TRAVIS_BUILD_DIR=.
  fi
  FIND=$(which find)
  GCOV=$(which gcov)
  export EFLAGS="--coverage" ELDFLAGS="--coverage" \
    LIBXSMM_RUNGCOV="${FIND} ${TRAVIS_BUILD_DIR} -type f -name '*.gcno' -exec ${GCOV} -pb {} +" \
    LIBXSMM_CODECOV="codecov"
else
  unset EFLAGS ELDFLAGS
  export LIBXSMM_RUNGCOV=true
  export LIBXSMM_CODECOV=true
fi

